{
    "name": "@figlet-ts/monorepo",
    "author": "Andrew B. Dicks",
    "license": "MIT",
    "private": true,
    "version": "0.1.0",
    "description": "Monorepo root",
    "repository": {
        "type": "git",
        "url": "https://github.com/figlet-ts/figlet-ts.git"
    },
    "scripts": {
        "prettier:check": "prettier --check . && npm run prettier:check -ws",
        "prettier:fix": "prettier --write . && npm run prettier:fix -ws",
        "lint:check": "npm run lint:check -ws",
        "lint:fix": "npm run lint:fix -ws",
        "check": "npm run lint:check && npm run prettier:check",
        "fix": "npm run lint:fix && npm run prettier:fix",
        "test": "rimraf coverage && npm run test -ws",
        "clean": "npm run clean -ws",
        "build": "npm run build -ws",
        "build:fonts": "npm run build --workspace @figlet-ts/fonts",
        "build:lib": "npm run build --workspace @figlet-ts/lib",
        "build:cli": "npm run build:figlet-ts",
        "build:figlet-ts": "npm run build --workspace @figlet-ts/lib && npm run build --workspace figlet-ts",
        "publish:all": "npm run publish -ws",
        "publish:fonts": "npm publish --workspace @figlet-ts/fonts",
        "publish:lib": "npm publish --workspace @figlet-ts/lib",
        "publish:cli": "npm run publish:figlet-ts",
        "publish:figlet-ts": "npm run build --workspace @figlet-ts/lib && npm publish --workspace figlet-ts",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.1",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.5",
        "@typescript-eslint/eslint-plugin": "^5.57.0",
        "eslint": "^8.37.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lerna": "^6.6.1",
        "prettier": "^2.8.7",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "tslib": "^2.5.0",
        "typedoc": "^0.23.28",
        "typescript": "^4.9.5"
    },
    "workspaces": [
        "packages/fonts",
        "packages/lib",
        "packages/figlet-ts"
    ]
}
